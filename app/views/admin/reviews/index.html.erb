<h1>管理者レビュー一覧</h1>

 <table>
   <thead>
     <tr>
       <th></th>
       <th>名前</th>
       <th>ニックネーム</th>
       <th>レビュータイトル</th>
       <th>レビュー本文</th>
       <th></th>
     </tr>
   </thead>

    <tbody>
      <% @reviews.each do |review| %>
      <tr>
        <td><%= image_tag(review.image.attached? ? review.image : asset_url('no_image.jpg'), size: '100x100') %></td>
        <td><%= review.user.family_name %> <%= review.user.personal_name %></td>
        <td><%= review.user.nickname %></td>
        <td><%= review.review_title %></td>
        <td><%= review.review_body %></td>
        <td><%= link_to "削除", admin_review_path(review.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %><!--eachの格納されてるやつやからreview 最初@reciewにしてた-->
    </tbody>
</table>
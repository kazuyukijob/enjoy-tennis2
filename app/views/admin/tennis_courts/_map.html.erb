<style>
.map{
  height: 150px;
  width:270px;
}
</style>

<script type="text/javascript">
//    function initMap() {

        var test ={lat: <%= tennis_court.latitude %>, lng: <%= tennis_court.longitude %>};
        var map = new google.maps.Map(document.getElementById('map_<%=tennis_court.id %>'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= tennis_court.address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });

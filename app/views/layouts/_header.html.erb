<body>
  <header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <!--<div class="container">-->
      <div class="yokonarabi">

              <!-- ヘッダ画像 -->
        <a class="navbar-brand p-3" href="/"><%= image_tag('enjoy tennis',width:200) %></a>



      <div class="collapse navbar-collapse aikonyoko" id="navbarNavDropdown" >
        <ul class="navbar-nav ml-auto">

      <!--user側-->
        <% if user_signed_in? %>

          <li class="nav-item">
            <%= link_to user_path(current_user),class: 'nav-link text-light' do %>
              <i class="fas fa-user" style="color: #1f512b;"></i> マイページ
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to tennis_courts_path,class: 'nav-link text-light' do %>
              <i class="fas fa-stop" style="color: #1f512b;"></i>コート一覧
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt" style="color: #1f512b;"></i> ログアウト
            <% end %>
          </li>

        <!--adomin側-->
        <% elsif admin_signed_in? %>

          <li class="nav-item">
            <%= link_to admin_users_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> ユーザー一覧
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to admin_reviews_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> レビュー一覧
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to new_admin_tennis_court_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> 施設登録
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to admin_tennis_courts_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> 施設一覧
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>

        <% else %>

          <li class="nav-item">
            <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> 新規登録
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to user_session_path,class: 'nav-link text-light' do %>
              <i class="fab fa-product-hunt"></i> ログイン
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to home_about_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>

        <% end %>
        </ul>
      </div>
    </nav>
  </header>
</body>